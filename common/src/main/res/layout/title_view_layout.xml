<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/title_view_height"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:id="@+id/left_title_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/title_left_icon"
            style="@style/titleIconStyle"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title_left_text"
            style="@style/titleTextStyle"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/title"
        style="@style/titleTextStyle"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end|center_vertical">
        <TextView
            android:id="@+id/title_right_text2"
            style="@style/titleTextStyle"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/title_right_icon2"
            style="@style/titleIconStyle"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title_right_text"
            style="@style/titleTextStyle"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/title_right_icon"
            style="@style/titleIconStyle"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>