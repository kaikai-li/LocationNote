<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_item_min_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/note_item_location"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/list_item_location_size"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_item_location_size"
            android:layout_margin="@dimen/list_item_location_margin"
            android:textSize="@dimen/item_location_text_size"
            android:text="@string/note_location_unknown"
            tools:text="Location"
            android:textColor="@color/color_B3000000"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/list_item_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/note_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/item_title_text_size"
                    android:textColor="@color/color_B3000000"
                    tools:text="Title"/>
                <TextView
                    android:id="@+id/note_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_time_text_size"
                    tools:text="上午8:30"
                    android:textColor="@color/color_4D000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <TextView
                android:id="@+id/note_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/item_content_text_size"
                android:textColor="@color/color_8A000000"
                android:layout_marginTop="2dp"
                tools:text="content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:background="@color/list_divider_color" />

</LinearLayout>