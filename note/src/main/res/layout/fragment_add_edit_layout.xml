<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">
    <com.lkk.locationnote.common.TitleView
        android:id="@+id/add_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_edit_title">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/add_edit_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_note_title_hint"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="@dimen/note_title_size"
            android:textColor="@color/color_B3000000"/>
    </android.support.design.widget.TextInputLayout>
    <EditText
        android:id="@+id/add_edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/note_content_size"
        android:textColor="@color/color_B3000000"
        android:minLines="20"
        android:gravity="start|top"
        android:layout_below="@id/content_title_wrapper" />
    <TextView
        android:id="@+id/add_edit_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_location_text_size"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:drawableStart="@drawable/ic_note_place"
        android:layout_below="@id/add_edit_content"
        tools:text="location"
        android:layout_marginStart="10dp"/>

</RelativeLayout>